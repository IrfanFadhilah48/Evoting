<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageViewDaftarPemilih"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/no_preview" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/textViewNpmDaftarPemilih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNamaDaftarPemilih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/checkListDaftarPemilih"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:src="@drawable/ic_check_green_24dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>